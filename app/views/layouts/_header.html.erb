<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "MMS 9", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li class="dropdown" >
              <a href="#"  class="dropdown-toggle" data-toggle="dropdown" >
                <%= t("header.admin") %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu" >
                <li><%= link_to t("header.user"), admin_users_path %></li>
                <li><%= link_to t("header.skill"), admin_skills_path %></li>
                <li><%= link_to t("header.team"), admin_teams_path %></li>
                <li><%= link_to t("header.position"), admin_positions_path %></li>
                <li><%= link_to t("header.log"), admin_activity_logs_path %></li>
              </ul>
            </li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <strong><%= current_user.email %></strong><b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.information"), user_path(current_user) %></li>
              <li><%= link_to t("header.edit_user"), edit_user_registration_path, class: "navbar-link" %></li>
              <li class="divider"></li>
              <li><%= link_to t("logout"), destroy_user_session_path, method: :delete, class: "navbar-link" %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
