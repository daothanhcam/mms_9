<div class="row">
  <div class="col-md-3"><%= project.name %></div>
  <div class="col-md-4"><%= project.abbreviation %></div>
  <div class="col-md-2"><%= project.team_name %></div>
  <div class="col-md-1"><%= link_to t("button.edit"),
    edit_admin_project_path(project), class: "glyphicon glyphicon-edit" %>
  </div>
  <div class="col-md-2">
    <%= link_to t("button.delete"), admin_project_path(project),
      method: :delete, data: {confirm: t("project.confirm.delete")},
      class: "glyphicon glyphicon-trash" %>
  </div>
</div>
